@model MvcApplication1.Areas.Mobile.ViewModels.OrderHistoryViewModel
@{
    ViewBag.Title = "OrderHistory";
}

<div class="container-fluid">
    <div class="container">
        <h1 class=" title_login">Order History</h1>
    </div>
</div>

<div class="plan_tbg">
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-xs-4 col-sm-3">
                    <h1 class=" title_review">My Plan </h1>
                </div>
                <div class="col-xs-3 col-sm-4">
                    <h1 class=" title_review">Pin # </h1>
                </div>
                <div class="col-xs-3 col-sm-3">
                    <h1 class=" title_review">Tr.Date </h1>
                </div>
                <div class="col-xs-2 col-sm-2">
                    <h1 class=" title_review">$ </h1>
                </div>

            </div>
        </div>
    </div>
</div>

@foreach (var item in Model.Orders)
{
    <div class="container-fluid">
        <div class="container">
            <div class="row profile">
                <div class="col-xs-3 col-sm-3">
                    <h3 class="order_titile">@item.PlanName</h3>
                </div>
                <div class="col-xs-4 col-sm-2">
                    <h3 class=" order_titile">@Html.MaskedPlanPin(item.Pin)</h3>
                </div>
                <div class="col-xs-3 col-sm-3 col-sm-offset-2  ">
                    <h3 class=" order_titile">@item.TransactionDate</h3>
                </div>
                <div class="col-xs-2 col-sm-2">
                    <h3 class=" order_titile">@Html.CurrencySign(item.CurrencyCode)@item.TransactionAmount</h3>
                </div>
            </div>
        </div>
    </div>
}