@model MvcApplication1.Models.HomeViewModel
           
<script src="@Url.Content("~/Scripts/lowest-rate.js")" type="text/javascript"></script>
<form id="lowestrate-form" method="GET" action="@Url.Action("SearchRate", "Rate")">
<div id="search_save">
    <div class="bb-custom-wrapper">
        <div style="position: absolute; z-index: 10000!important; margin: -4px 0 0 -7px;">
            <h1>
                Lowest Calling Rates</h1>
            <label>
                <select name="countryfrom" class="call_to" id="ddlCountryListFrom" 
                                                        data-bind="options: CountryListFrom, optionsText: 'Name', optionsValue: 'Id', optionsCaption: 'Calling From...', value: CallingFrom ">
                                                    </select>
                @* @Html.DropDownListFor(x => x.CallingFrom, (SelectList)@ViewBag.Callingfrom, "Country...", new { @id = "Countryfrom", @class = "optionselect", data_bind = "value: CallingFrom" })*@
                @*<select data-bind="value: CallingFrom" id="countryFrom" name="countryfrom" class="call_from" >
                    <option value="0">Calling From...</option>
                    @foreach (var country in Model.CountryListFrom)
                      {
                        <option value="@country.Id">@country.Name</option>
                      }
                </select>*@
            </label>
            <label>
                <select class="call_to" id="Country" name="countryto" data-bind="options: CountryListTo, optionsText: 'Name', optionsValue: 'Id', optionsCaption: 'Calling To...', value: CallingTo ">
                                                </select>
                @*@Html.DropDownListFor(x => x.CallingTo, (SelectList)@ViewBag.Callingto, "Country...", new { @id = "Country", @class = "optionselect", data_bind = "value: CallingTo" })*@
                @*<select data-bind="value: CallingTo" id="countryTo" class="call_to" name="countryto" >
                    <option value="0">Calling To...</option>
                    @foreach (var country in Model.CountryListTo)
                      {
                        <option value="@country.Id">@country.Name</option>
                      }
                </select>*@
            </label>
        </div>
        <div id="bb-bookblock" class="bb-bookblock">
            <div class="bb-item">
                <div class="fc-calendar-wrap">
                    <div class="landline-box">
                        <div class="landline">
                            <h1>
                                <img src="@Url.Content("~/images/landline.jpg")" alt="" border="0" /><br />
                                <span data-bind="text: LandlineRate"></span><span class="small_min"> ¢/min</span></h1>
                        </div>
                        <div class="landline">
                            <h1>
                                <img src="@Url.Content("~/images/mobile.jpg")" alt="" border="0" /><br />
                               <span data-bind="text: MobileRate"></span><span class="small_min"> ¢/min</span></h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="button" style="position: relative; margin-top: -30px; z-index: 100000;
            margin-right: 64px;">@*<a href=""><img src="@Url.Content("~/images/buy.jpg")"  alt="" width="67" height="20" /></a>*@
            <a><img src=@Url.Content("~/images/buy.jpg") alt="buy" width="67" height="20" onclick="document.getElementById('lowestrate-form').submit();"></a>
        </div>
    </div>
</div>
</form>
