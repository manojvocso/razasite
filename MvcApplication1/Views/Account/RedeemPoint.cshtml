@model MvcApplication1.Models.ReferFriend
          

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" type="text/javascript"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js" type="text/javascript"></script>
<!--Body Container Start-->
<div id="inner_body_container">
   
    <div id="banner">
        <img src="@Url.Content("~/images/rewards_banners.jpg")" /></div>
    <!-- End demo -->
    <div id="feedback_panel">
        <div id="feedback-scroller">
            <div class="top-bg">
                <h1>
                    Rewards Overview</h1>
            </div>
            <div class="repeat-scroller-bg">
                <div id="accordion_feedback">
                    <div>
                        <h4 style="margin-left: 10px; width: 50%; float: left;">
                            Welcome Back, @(((MvcApplication1.Models.RazaPrincipal)User).FullName)!<br />
                            <div class="breadcrumbs">
                                <a href="@Url.Action("ReferFriend", "Account")">Refer-A-Friend</a>&nbsp;|&nbsp;<a href="@Url.Action("RazaReward", "Account")">Raza
                                    Rewards</a>&nbsp;|&nbsp;<a href="#">Redeemed Points</a></div>
                        </h4>
                        <div class="ri-text">
                            <div class="square-reedam">
                                <span>@Model.PointToshow</span>
                                <br />
                                  @if(Model.PointToshow >=0)
                               {
                          <a href="@Url.Action("RedeemRewardNow","Account", new { redeempt= Model.PointToshow})" style="padding-left: 11px;">Redeem Now! </a>
                               }
                     
                             
                               
                            </div>
                            <a href="#" style="color: #C60000; margin-right: 12px;" class="redeem_point">Total available
                                Points:</a>
                        </div>
                        <div class="clear">
                        </div>
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td colspan="2" align="right">
                                </td>
                            </tr>
                        </table>
                        <div class="graybod">
                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td width="55%">
                                        <h2 class="order_newhead">
                                            Redeemed Rewards Points</h2>
                                    </td>
                                    <td align="center" class="order_newhead">
                                    </td>
                                </tr>
                                <tr class="plan-rate">
                                    <td height="30" class="dataheading">
                                        Redeemed Points:
                                    </td>
                                    <td width="45%" height="30" class="dataheading">
                                        Pts.
                                    </td>
                                </tr>
                                <tr>
                                    <td height="30" bgcolor="#eeeeee" class="data11">
                                        Total Redeemed Points:
                                    </td>
                                    <td height="30" align="center" bgcolor="#eeeeee" class="buy1">@Model.RedeemPt
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <br />
                        <br />
                        <div class="graybod">
                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td>
                                        <h2 class="order_newhead">
                                            Total Summary Points</h2>
                                    </td>
                                    <td align="center" class="order_newhead">
                                    </td>
                                </tr>
                                <tr class="plan-rate">
                                    <td height="30" class="dataheading">
                                        Refer-A-Friend
                                    </td>
                                    <td width="45%" height="30" class="dataheading">@Model.ReferPoint
                                    </td>
                                </tr>
                                <tr>
                                    <td width="55%" height="30" class="data11">
                                        Raza Rewards<sup>TM</sup>
                                    </td>
                                    <td height="30" align="center" class="buy1">
                                        @if (@Model.RewardPoints != null && @Model.RewardPoints.Count > 0)
                                        {
                                            <strong>@Model.RewardPoints.Sum(a => a.Points)</strong>
                                        }
                                        else
                                        {
                                            <strong>0</strong>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td height="30" bgcolor="#eeeeee" class="data11">
                                        Points Redeemed
                                    </td>
                                    <td height="30" align="center" bgcolor="#eeeeee" class="buy1">@Model.RedeemPt
                                    </td>
                                </tr>
                                <tr>
                                    <td height="30" class="data11">
                                        <strong>Total available Points:</strong>
                                    </td>
                                    <td height="30" align="center">
                                        <strong class="">@Model.Point</strong>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bottom-scroller-bg">
            </div>
        </div>
    </div>
    <!--Body Container End-->
</div>
<div class="spacer">
</div>
<div class="clear">
</div>
