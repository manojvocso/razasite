@model MvcApplication1.Models.BillingInfoModel
@{
    ViewBag.Title = "BillingInfo";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" type="text/javascript"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js" type="text/javascript"></script>


@*<script src="@Url.Content("~/Scripts/knockout-2.2.1.js")" type="text/javascript"></script>*@
<script src="@Url.Content("~/Scripts/billInfo.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/Support.js")" type="text/javascript"></script>


<!--Top Header End-->
<!--Body Container Start-->
<div id="inner_body_container">

    <div id="banner">
        <img src="@Url.Content("~/images/editprofile_october.jpg")" alt="" /></div>
    <!-- End demo -->

    
    <div id="auto-refill">
        <div id="auto-refill-scroller">
            <input type="hidden" id="fetchdatafromurl" value="@ViewBag.FetchDataFromUrl" />
             <div class="top-bg">
                <h1>
                    Edit Your Profile
                 <span data-bind="text: ErrorMsg" style="padding-left: 200px;font-size:16px;color:red;font-weight: bold"></span>
                </h1>
                   
            </div>
            
            <div class="repeat-scroller-bg">
                <div class="editprofile_b">
                    <div id="edit-profile" class="edi_pro">
                        <div class="left">
                            <p>
                                <label class="cci_label">
                                    First Name:</label>
                                <input id="FirstName" type="text" data-bind='value: FirstName' name="FirstName"  onkeypress="return characterOnly();" maxlength="20" tabindex="1" />
                            </p>
                            <p>
                                <label class="cci_label">
                                    Billing Address:</label>
                                <input id="Address" type="text" data-bind='value: Address' name="Address" tabindex="3" maxlength="30" />
                            </p>
                            <p>
                                <label class="cci_label">
                                    City:</label>
                                <input id="City" type="text" data-bind='value: City' name="City" onkeypress="return characterOnly();" maxlength="20" tabindex="5"  />
                            </p>
                            <p>
                                <label class="cci_label">
                                    Zip / Postal Code</label>
                                <input id="ZipCode" type="text" data-bind='value: ZipCode' name="ZipCode"  maxlength="10" tabindex="7" />
                            </p>
                            <p>
                                <label class="cci_label">
                                    Home Phone:</label>
                                <input type="text"   data-bind='value:UnmaskPhonenumber' name="PhoneNumber"  onkeypress="return numberOnly();" maxlength="10" tabindex="8" />
                            </p>
                            <div id="validation-msgs" style="color: red; float:left;">
                         
                            
                        </div>
                            @* new error mesage*@
                            <div class="expandable" id="errorValidation">
                  <div id="close-val1" class="close-confirm">
                        </div>    
			 <table width="100%" border="0" cellspacing="0" cellpadding="0">
                  
              <tr>
                <td width="14"><img src="@Url.Content("~/images/expand_top_left.png")" width="14" height="13" /></td>
                <td style="background:url(/images/expand_drop_top.png) repeat-x left 2px;"></td>
                <td width="14"><img src="@Url.Content("~/images/expand_top_right.png")" width="14" height="13" /></td>
              </tr>
              <tr>
                <td style="background:url(/images/expand_drop_left.png) repeat-y 0px top;"></td>
                <td style="background:#fff;"><div class="expandable_mid">
                             <img src="@Url.Content("~/images/error_sign.png")" style="float:left;margin-top:15px;margin-left:30px;" /> 
                     <div id="validation-message" style="margin-left:150px;color:red" class="validation-error-msg">
			
                             <ul data-bind="foreach: validationmessages">
                                <li data-bind="text: $data"></li>
                  </div>
                 <div id="validation-messagereview" style="margin-left:111px;margin-top:13px;color:red" class="validation-error-msg">
			
                            
                              
                                 
                            
                  </div>
                    
                  </div></td>
                <td style="background:url(/images/expand_drop_right.png) repeat-y 0px top;"></td>
              </tr>
              <tr>
                <td width="14" style="padding:0px!important;"><img src="@Url.Content("~/images/expand_bot_left.png")" width="14" height="13" /></td>
                <td style="background:url(/images/expand_drop_bottom.png) repeat-x left 0px;" width="100%" ></td>
                <td width="14" style="padding:0px!important;"><img src="@Url.Content("~/images/expand_bot_right.png")" width="14" height="13" /></td>
              </tr>
            </table>

			  </div>
                          <div class="loader">
                </div>
                      <div id="backgroundValidation">
                </div>


                        </div>
                        <div class="right right-new">
                            <p>
                                <label class="cci_label">
                                    Last Name:</label>
                                <input id="LastName" type="text" data-bind='value: LastName' name="LastName" onkeypress="return characterOnly();" maxlength="20" tabindex="2" />
                            </p>
                            <p>
                               
                                <label class="cci_label">
                                  
                                        
                                   Country: </label>
                                @*<select id="billing-state"   data-bind="options: BillingStateList, optionsText: 'Name', optionsValue: 'Name', optionsCaption: 'State..', value: State ">
                                </select>*@
                             @Html.DropDownListFor(x => x.Country, (SelectList)@ViewBag.Cont, new { id = "Country", @class = "optionselect",tabindex="4", data_bind = "value: Country" })
                               
                             
                           <!--  else{
                          
                            <input id="state" type="text"  name="state" data-bind = "value: State"  maxlength="20" tabindex="4" />
                             }-->
                            </p>
                            <p>
                                <label class="cci_label">
                                    State/Province:</label>
                              @*  <select id="billing-country" tabindex="6"  data-bind="options: BillingCountryList, optionsText: 'Name', optionsValue: 'Name', optionsCaption: 'Country..', value: Country ">
                                </select>*@
                                 @Html.DropDownListFor(x => x.State, (SelectList)@ViewBag.State, new { id = "State", @class = "optionselect",tabindex="6", data_bind = "value: State" })
                               
                            </p>
                            <p>
                                <label class="cci_label">
                                    Password:</label>
                                <a name="" style="cursor: pointer;">
                                    <img src="@Url.Content("~/images/edit_password.png")" id="show" width="16" height="16" alt="edit password" /></a>
                            </p>
                            <div class="showdiv" style="display: none;">
                                <p>
                                    <label class="cci_label">
                                        Old Password:</label><input type="password" value="" id="OldPwd" name="OldPwd" data-bind='value:OldPwd'  />
                                </p>
                                <p>
                                    <label class="cci_label">
                                        New Password:</label>
                                    <input type="password" value="" id="NewPwd" name="NewPwd" data-bind='value:NewPwd' onblur="minLength();"  /></p>
                                <p>
                                    <label class="cci_label">
                                        Confirm Password:</label>
                                    <input type="password" value="" id="ConfirmPassword" data-bind='value:ConfPwd'/>
                                </p>
                       
                            </div>
                        </div>
                        <p align="center">
                          
                        </p>
                        
                        <div class="spacer">
                        </div>
                      
                     
                        <div align="center">
                            <div id="Errorinpwd" style="color: red; margin-left: 300px;"></div>
                              
                            <button id="btnUpdate" name="btnAddDestination" class="update1_new " />
                        </div>
                    </div>
                </div>
            </div>
            <div class="bottom-scroller-bg">
            </div>
        </div>
    </div>

    <!--Body Container End-->
    <div class="spacer">
    </div>
    <div class="clear">
    </div>
</div>