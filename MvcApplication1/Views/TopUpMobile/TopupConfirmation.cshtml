@model MvcApplication1.Models.CartAuthenticateModel
@{
    ViewBag.Title = "RechargeConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery1.10.3-ui.js")" type="text/javascript"></script>
<!-- Confirmation Step4 -->
<div id="banner">
        <img src="@Url.Content("~/images/confirmation-banner1.jpg")" /></div>
<div class="form_field">
  <h2 class="title_black"></h2>
  <div id="auto-refill" style="margin-left: 9px;">
    <div id="auto-refill-scroller">
      <div class="top-bg">
        <h1>Order Confirmation</h1>
      </div>
      <div class="repeat-scroller-bg">
        <div class="editprofile_b">
          <div id="edit-profile">
		  <div class="hanging">
				<p class="hanging_para">Date of Purchase:<span class="hanging_s"> @DateTime.Now.ToString("M/d/yyyy HH:mm:ss")</span></p>
				
				</div>
				<div class="clear"></div>
              @if (Model.RechargeValues.TopupStatus)
              {
                  <h3 class="align_centet">Mobile Top Up Successfull!!<br>
                  <span class="twenty"> "Thank you for Ordering!’’</span></h3>
              }
              else
              {
                  <h3 class="align_centet">Mobile Top Up is not Successfull!!<br>
                  <span class="twenty"> "Please Try Again!’’</span></h3>
              }
            <table width="100%" cellpadding="0" cellspacing="0" class="conform-table">
			
			<tbody><tr><th colspan="2" class=""></th></tr>
			<tr><th colspan="2"><h5 class="bglight">Order Information</h5></th></tr>
<tr class="even">
<td>Order Number</td>
<td>@Model.RechargeValues.order_id</td>
</tr>
<tr class="odd">
<td>Mobile Top Up Number</td>
<td>@Model.RechargeValues.TopUpCountryCode @Model.RechargeValues.TopupMobileNumber</td>
</tr>
<tr class="even">
<td>Credit Card </td>
<td>@Model.RechargeValues.CardNumber</td>
</tr>
<tr class="odd">
<td>Top up Amount</td>
<td>@Model.RechargeValues.CurrencyCode @Model.RechargeValues.TopupSourceAmount</td>
</tr>
<tr class="even">
<td>Payment Method</td>
<td>@Model.RechargeValues.PaymentMethod</td>
</tr>
<tr class="odd">
<td>Amount Excluding Tax</td>
<td>@Model.RechargeValues.CurrencyCode @Model.RechargeValues.TopupSourceAmount </td>
</tr>

<tr class="even">
<td>Tax Amount</td>
<td>@Model.RechargeValues.CurrencyCode @Model.RechargeValues.ServiceFee</td>
</tr>
<tr class="odd">
<td><strong>Total Amount Charged</strong></td>
<td><strong>@Model.RechargeValues.CurrencyCode @Model.RechargeValues.TopupSourceAmount</strong></td>
</tr>
<tr class="odd">
<th colspan="2"><h5 class="bglight">Confirmation send to   </h5></th>
</tr>
<tr class="even"><td>E-mail</td>
<td> <strong>@Model.RechargeValues.EmailId</strong>

</td>
</tr>
<tr class="odd"><td>Phone Number:</td>
<td>@Model.RechargeValues.TopUpCountryCode @Model.RechargeValues.TopupMobileNumber</td>
</tr>
			
			</tbody></table>
            
            <p class="us-flag"> <span class="usflag"><img src="@Url.Content("~/images/us-flag.png")" alt="US" class="imgus">
			<!--<img src="images/chat-icon.png" class="chat-icon" alt="Chat"/>-->1-877-463-4233</span> <span class="candaflag"><img src="@Url.Content("~/images/ca-flag.png")" alt="Canada" class="imgus"><!--<img src="images/chat-icon.png" class="chat-icon" alt="Chat"/>-->1-416-848-0234</span> <span class="ukflag"><img class="imgus" src="@Url.Content("~/images/uk-flag.png")" alt="UK">
			<!--<img src="images/chat-icon.png" class="chat-icon" alt="Chat"/>--> 0808-234-7012</span> <a href="" class="click-chat-btn"></a> </p>
          </div>
        </div>
      </div>
      <div class="bottom-scroller-bg"></div>
    </div>
  </div>
  <!--<fieldset class="biger">



     <input type="submit" class="prev"></button>



     <input type="submit" value="Next" class="next">



     </fieldset>-->
</div>