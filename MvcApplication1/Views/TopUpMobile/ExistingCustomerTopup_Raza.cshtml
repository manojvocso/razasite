@model MvcApplication1.Models.TopupModel
<script src="@Url.Content("~/scripts/jquery.tools.new.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/creditcard.js")" type="text/javascript"></script>
<script src="@Url.Content("~/scripts/Existcust-Topup_Raza.js")" type="text/javascript"></script>

<!--Body Container Start-->

<div id="inner_body_container">

    <div id="banner">
        <img src="@Url.Content("~/images/checkout_chaged.jpg")" /></div>
    <div class="expandable" id="toPopup1">
        <div id="close-val" class="close-confirm">
        </div>
        <table width="100%" border="0" cellspacing="0" cellpadding="0">

            <tr>
                <td width="14">
                    <img src="@Url.Content("~/images/expand_top_left.png")" width="14" height="13" /></td>
                <td style="background: url(/images/expand_drop_top.png) repeat-x left 2px;"></td>
                <td width="14">
                    <img src="@Url.Content("~/images/expand_top_right.png")" width="14" height="13" /></td>
            </tr>
            <tr>
                <td style="background: url(/images/expand_drop_left.png) repeat-y 0px top;"></td>
                <td style="background: #fff;">
                    <div class="expandable_mid">
                        <img src="@Url.Content("~/images/error_sign.png")" style="float:left;margin-top:15px;margin-left:30px;" />
                        <div id="validation-message" style="margin-left: 150px; color: red; margin-top: 15px;" class="validation-error-msg">

                            <ul data-bind="foreach: Validationarray">
                                <strong>
                                    <li data-bind="text: $data" style="list-style-type: disc"></li>
                                </strong>
                            </ul>
                        </div>

                    </div>
                </td>
                <td style="background: url(/images/expand_drop_right.png) repeat-y 0px top;"></td>
            </tr>
            <tr>
                <td width="14" style="padding: 0px!important;">
                    <img src="@Url.Content("~/images/expand_bot_left.png")" width="14" height="13" /></td>
                <td style="background: url(/images/expand_drop_bottom.png) repeat-x left 0px;" width="100%"></td>
                <td width="14" style="padding: 0px!important;">
                    <img src="@Url.Content("~/images/expand_bot_right.png")" width="14" height="13" /></td>
            </tr>
        </table>

    </div>
    <div class="loader">
    </div>
    <div id="backgroundPopup">
    </div>
    <form action="#">
        <div id="wizard">
            <ul id="status">
                <li id="slider1"><span>Mobile Top Up Info </span></li>
                <li id="slider2"><span>Billing and payment info</span></li>
                <li id="slider3"><span>Confirmation</span></li>
            </ul>
            <div class="items">

                <!-- Mobile Top up Info2 -->
                <div class="form_field">
                    <div id="auto-refill">
                        <div id="auto-refill-scroller">
                            <div class="top-bg">
                                <input type="hidden" id="hidden-phonenumber" value="@Model.MobileNumber" />
                                <input type="hidden" id="hidden-countryid" value="@Model.Country" />

                                <h1><span class="fr small_text margin-right20"><a href="#" class="blue_hover"></a></span>Mobile Top Up Details</h1>
                            </div>
                            <div class="repeat-scroller-bg">
                                <div class="editprofile_b">
                                    <div id="edit-profile" class="edi_pro">
                                        <div class="mobil-div">
                                            <p>
                                                <label>Country : </label>

                                                <select name="CountryTo" tabindex="1" id="topup-country" data-bind="options: CountryListTo, optionsText: 'Name', optionsValue: 'Id', optionsCaption: 'Select Country..', value: TopupCountryId ">
                                                </select>

                                            </p>
                                            <div class="spacer"></div>
                                            <div class="clear"></div>
                                            <p>
                                                <label>Phone Number : </label>
                                                <input type="text" style="width: 50px" readonly="readonly" data-bind="value: DisplayCountryCode" />
                                                <input name="" tabindex="2" type="text" id="topup-mobilenum" style="width:223px;" placeholder="  Enter Phone Number" data-bind="value: TopupMobileNumber" onkeypress="return numberOnly();" maxlength="10">
                                            </p>
                                            <div class="spacer"></div>
                                            <div class="clear"></div>
                                            <p>
                                                <label>Operator : </label>
                                                @* <img src="@Url.Content("~/images/axis-image1.jpg")" alt=" " class="logo-icon" /> <img src="@Url.Content("~/images/alltel-image2.jpg")" alt=" " class="logo-icon" /> <img src="@Url.Content("~/images/mobile-image1.jpg")" alt=" " class="logo-icon" />*@
                                                <!-- ko if: IsAutoOperatorFind -->
                                                <span>
                                                    <!-- ko if: OperatorImageName -->
                                                    <img data-bind="attr: { src: OperatorImageName }" alt=" " class="logo-icon" />
                                                    <!-- /ko -->
                                                    <!-- ko ifnot: OperatorImageName -->
                                                    <span data-bind="text: OperatorName" style="font-size:20px;"></span>
                                                    <!-- /ko -->
                                                </span>
                                                <!-- /ko -->
                                                
                                                <!-- ko ifnot: IsAutoOperatorFind -->
                                                @*<strong style="color:red;font-size:13px;" >Invalid Carier or Country.!!</strong>*@
                                                <select name="selectoperator" id="SelectOpearotor" data-bind="options: AllCountryOpearatorlist, optionsText: 'OperatorName', optionsValue: 'OperatorName', optionsCaption: 'Select Operator..', value: SelectedOperatorName">
                                                </select>
                                                 <!-- /ko -->
                                            </p>
                                            <div class="spacer"></div>
                                            <div class="clear"></div>
                                            <p>
                                                <label>Amount :</label>
                                                <select name="SelectAmount" tabindex="3" id="Purchaseamount" data-bind="options: Opearatordatalist, optionsText: 'SourceAmountwithSign', optionsValue: 'SourceAmount', optionsCaption: 'Select Amount..', value: SourceAmount">
                                                </select>


                                            </p>
                                            <div class="spacer"></div>
                                            <div class="clear"></div>
                                            <p>
                                                <label>&nbsp;</label>
                                                <textarea readonly="readonly" data-bind="value: TextAreaAmount"> </textarea>
                                            </p>
                                            <div class="spacer"></div>
                                            <div class="clear"></div>
                                            <p>
                                                <label></label>
                                                <input name="Submit" tabindex="4" type="button" id="Submit" value="" class="submit-btn-new next second_tab_mar2">
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="bottom-scroller-bg"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<!--Body Container End-->

<div class="clear"></div>


<script>

    function show_form() {

        $("#credit").slideDown("slow");

    }

    function close_form() {
        $("#credit").slideUp("slow");

    }
</script>


<script src="@Url.Content("~/scripts/scripts.js")"></script>

<script src="@Url.Content("~/scripts/jquery.dropkick-min.js")"></script>


<script>
    $(document).ready(function () {

        $("#countries_signup_popup").msDropdown();
        $("#countries_searchrates_footer").msDropdown();
        $("#countries_tryusfree_footer").msDropdown();
        $("#countries_plans").msDropdown();
        $("#countries").msDropdown();

    });
</script>
