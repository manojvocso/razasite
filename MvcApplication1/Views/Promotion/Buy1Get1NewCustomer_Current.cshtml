        var denomination = 10;
        var coupon = "BUY1GET1";
        var servicefee = 0;
        var url = "/Promotion/BuyPromotionPlan?countryfrom=" + countryfrom + "&countryto="
            + countryto + "&denomination=" + denomination + "&couponcode=" + coupon + "&servicefee=" + servicefee;
        window.location.href = url;
        return true;
    }
</script>