<script>
    $(document).ready(function () {
        $("#diverrmsg").html("");
        $("#btnSubmit").click(function () {
            //$(this).slideUp();
            //alert("Hello World");


            var FullName = $("#txtFullName").val();
            var Email = $("#txtEmail").val();
            var Phone = $("#txtPhone").val();
            var City = $("#txtCity").val();
            var State = $("#txtState").val();
            var ZipCode = $("#txtZipCode").val();
            var Address = $("#txtAddress").val();
            var Message = $("#txtMessage").val();
            if (FullName.length == 0 || Email.length == 0 || Phone.length == 0 || Message.length == 0)
                alert("Plase check the Required Fields and resubmit");
            else {


                //self.CountryFrom = ko.observable("");
                //self.CountryTo = ko.observable("");
                //self.PromotionPlans = ko.observableArray([]);

                $.ajax({
                    url: '/Promotion/PaaContest_Submit',
                    data: {
                        FullName: FullName,
                        Email: Email,
                        Phone: Phone,
                        City: City,
                        Address: Address,
                        ZipCode: ZipCode,
                        State: State,
                        Message: Message
                    },
                    type: "GET",
                    success: function (resp) {

                        //self.PromotionPlans(resp);
                        //alert(resp);
                        $("#diverrmsg").html(resp);

                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        //self.ErrorMsg(JSON.parse(jqXHR.responseText).ValidationMessage);
                        alert("Unknown Error");
                    }
                });
            }





        });

    });
</script>
