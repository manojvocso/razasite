<script type="text/javascript">
    $(document).ready(function (e) {
        $('.sam').click(function () {
            var id = $(this).attr('id');

            $('.sam').removeClass('activetab');
            $(this).addClass('activetab');

            $('.custom').hide();
            $('#' + id + "-1").show();
        });
    });
</script>

<link href="@Url.Content("~/css/style-raza-offerchoosing.css")" rel="stylesheet" />
<style>
    a.tooltip {
        outline: none;
        color: #000;
        text-decoration: none;
        position: relative;
    }

        a.tooltip strong {
            line-height: 30px;
        }

        a.tooltip:hover {
            text-decoration: none;
        }

        a.tooltip span {
            z-index: 10;
            display: none!important;
            padding: 14px 20px!important;
            margin-top: -30px!important;
            margin-left: 28px!important;
            width: 700px;
            line-height: 16px;
        }

        a.tooltip:hover span {
            display: inline;
            position: absolute;
            color: #fff;
            background: #5b5b5b;
            top: 103px;
            left: 148px;
        }

    .callout {
        z-index: 20;
        position: absolute;
        top: -6px;
        border: 0;
        left: 20px;
    }
    /*CSS3 extras*/
    a.tooltip span {
        border-radius: 4px;
        -moz-border-radius: 4px;
        -webkit-border-radius: 4px;
        -moz-box-shadow: 5px 5px 8px #333;
        -webkit-box-shadow: 5px 5px 8px #333;
        box-shadow: 5px 5px 8px #333;
        font-size: 13px !important;
    }

        a.tooltip span ol {
            list-style-type: none;
            padding-bottom: 0px;
            padding-left: 0px;
            margin: 0px;
            padding: 0px;
        }

            a.tooltip span ol li {
                list-style-type: none;
                padding-bottom: 0px;
                padding-left: 0px;
                margin: 0px;
                padding: 0px;
            }
</style>
<div class="main-customer-div">
